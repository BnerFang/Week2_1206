                android:text="======第三方登录======"/>

            <Button
                android:id="@+id/btn_qq"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:background="@drawable/qq_" />

