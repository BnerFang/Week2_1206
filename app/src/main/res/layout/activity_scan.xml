<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ScanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <ImageView
            android:id="@+id/back_imgicon"
            android:layout_weight="0.6"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/colorA"
            android:src="@drawable/umeng_socialize_back_icon"/>
        <TextView
            android:layout_weight="9.4"
            android:layout_width="0dp"
            android:text="扫描二维码"
            android:textColor="#fff"
            android:textSize="24sp"
            android:background="@color/colorA"
            android:gravity="center"
            android:layout_height="match_parent" />

    </LinearLayout>

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.3"
        android:id="@+id/zx"
        app:qrcv_scanLineColor="@color/colorA"
        app:qrcv_borderColor="@color/colorB"
        app:qrcv_cornerColor="@color/colorC"/>




</LinearLayout>